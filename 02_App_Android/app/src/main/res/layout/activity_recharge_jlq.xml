<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackDark"
    android:orientation="vertical"
    tools:context="info.lftong.ui.recharge.RechargeJlqActivity">

    <!--标题-->
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/primaryBackNormal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/icon_back_gray"
            android:visibility="visible" />

        <View
            android:id="@+id/view_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="转入"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/ibRegist"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:minWidth="48dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:visibility="invisible" />

    </LinearLayout>

    <ScrollView
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryBackNormal"></View>

            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="商城账号"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="229dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="请输入商城账号"
                        android:maxLines="2"
                        android:text=""
                        android:enabled="false"
                        android:textColorHint="@color/primaryTextGray"
                        android:textColor="@color/primaryText"
                        android:textSize="13sp" />

                <ImageView
                        android:id="@+id/ivInto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|left"
                        android:scaleType="center"
                        android:src="@mipmap/icon_into"
                        android:textSize="14sp"
                        android:visibility="gone" />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryBackNormal"/>

            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/amount"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">


                <EditText
                        android:id="@+id/etCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center|left"
                        android:hint="最小充值金额10JLQ"
                        android:inputType="numberDecimal"
                        android:text=""
                        android:textColorHint="@color/primaryTextGray"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/tvUnit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|left"
                        android:text="JLQ"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryBackNormal"/>

            <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="商城账户密码"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingRight="16dp">

                <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center|left"
                        android:hint="商城账户密码"
                        android:inputType="textPassword"
                        android:text=""
                        android:textColor="@color/primaryText"
                        android:textColorHint="@color/primaryTextGray"
                        android:textSize="14sp" />

                <ImageView
                        android:id="@+id/yan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/yan_no" />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryBackNormal"/>

            <TextView
                    android:id="@+id/tvReCharge"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/circle_corner_rect_orange_back0"
                    android:gravity="center"
                    android:enabled="false"
                    android:text="@string/submit"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/text_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:lineSpacingMultiplier="1.4"
                    android:text="• 提交充值请求后，将会扣除商城中的余额转入到交易平台JLQ账户。\n• 最小充值金额：10 JLQ，小于最小金额的充值将不会上账。\n• 请勿向上述地址充值任何非币种资产，否则资产将不可找回。 \n• 您充值至上述地址后，需要整个区块链网络节点的确认，一般区块链主网3次网络确认后到账。 \n• 您的充值地址不会经常改变，可以重复充值；如有更改，我们会尽量通过网站公告或邮件通知您。 \n• 请务必确认操作环境安全，防止信息被篡改或泄露。"
                    android:textColor="#777"
                    android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
